<Window x:Class="DebtCalculator.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtCalculator"
        xmlns:controls="clr-namespace:DebtCalculator.Controls" 
        mc:Ignorable="d"
        Title="AccountWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <controls:Header x:Name="Header" VerticalAlignment="Top"/>
        <ListBox x:Name="accountListBox" Margin="118,79,146,44" Background="Transparent" BorderBrush="Transparent"/>
        <Button x:Name="deleteButton" Content="Delete Entry" HorizontalAlignment="Left" Margin="705,315,0,0" VerticalAlignment="Top" Height="75" Width="77" Click="deleteButton_Click"/>
        <Label x:Name="TotalInterestLabel" Content="Total Monthly Interest:" HorizontalAlignment="Left" Margin="661,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="totalInterestTextBox" HorizontalAlignment="Left" Margin="665,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.375,-0.217"/>
    </Grid>
</Window>
